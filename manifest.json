{
    "name": "Paella Button Remover",
    "version": "1.0",
    "description": "Removes the unmistakably large play button of the opencast paella web player.",
    "manifest_version": 2,
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "permissions": [
        "declarativeContent",
        "tabs",
        "activeTab"
    ],
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "page_action": {
        "default_title": "Remove play button!"
    }
}